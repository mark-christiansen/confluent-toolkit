# broker settings
bootstrap.servers: localhost:9092
security.protocol: SASL_SSL
ssl.keystore.location: ../../../certs/client.kafka_network.keystore.jks
ssl.keystore.password: serverpassword
ssl.truststore.location: ../../../certs/client.kafka_network.truststore.jks
ssl.truststore.password: serverpassword

# auth
sasl.mechanism=PLAIN
sasl.jaas.config=org.apache.kafka.common.security.plain.PlainLoginModule required \
   username="client" \
   password="client-secret";

# producer settings
acks=all

# schema registry settings
schema.registry.url: https://localhost:8081
schema.registry.ssl.keystore.location: ../../../certs/client.kafka_network.keystore.jks
schema.registry.ssl.keystore.password: serverpassword
schema.registry.ssl.truststore.location: ../../../certs/client.kafka_network.truststore.jks
schema.registry.ssl.truststore.password: serverpassword

# zookeeper settings
zookeeper.connect: zoo1:2181,zoo2:2182,zoo3:2183
zookeeper.clientCnxnSocket: org.apache.zookeeper.ClientCnxnSocketNetty
zookeeper.ssl.client.enable: true
zookeeper.ssl.keystore.location: /var/ssl/private/client.kafka_network.keystore.jks
zookeeper.ssl.keystore.password: serverpassword
zookeeper.ssl.truststore.location: /var/ssl/private/client.kafka_network.truststore.jks
zookeeper.ssl.truststore.password: serverpassword
zookeeper.sasl.client: true
zookeeper.sasl.client.username: client
zookeeper.set.acl: true