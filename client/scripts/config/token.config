# broker settings
bootstrap.servers=lb:19092
security.protocol=SASL_SSL
ssl.keystore.location=/var/ssl/private/kafka1.kafka_network.keystore.jks
ssl.keystore.password=serverpassword
ssl.truststore.location=/var/ssl/private/kafka1.kafka_network.truststore.jks
ssl.truststore.password=serverpassword

# auth
sasl.mechanism=OAUTHBEARER
sasl.jaas.config=org.apache.kafka.common.security.oauthbearer.OAuthBearerLoginModule required \
    metadataServerUrls="https://kafka1:8091,https://kafka2:8092,https://kafka3:8093" \
    username="schema" \
    password="schema-secret";
sasl.login.callback.handler.class=io.confluent.kafka.clients.plugins.auth.token.TokenUserLoginCallbackHandler

# producer settings
acks=all

# schema registry settings
schema.registry.url=https://schema1:8081
schema.registry.ssl.keystore.location=/var/ssl/private/kafka1.kafka_network.keystore.jks
schema.registry.ssl.keystore.password=serverpassword
schema.registry.ssl.truststore.location=/var/ssl/private/kafka1.kafka_network.truststore.jks
schema.registry.ssl.truststore.password=serverpassword
basic.auth.credentials.source=USER_INFO
basic.auth.user.info=admin:admin-secret

# zookeeper settings
zookeeper.connect=zoo1:2181,zoo2:2182,zoo3:2183
zookeeper.clientCnxnSocket=org.apache.zookeeper.ClientCnxnSocketNetty
zookeeper.ssl.client.enable=true
zookeeper.ssl.keystore.location=/var/ssl/private/kafka1.kafka_network.keystore.jks
zookeeper.ssl.keystore.password=serverpassword
zookeeper.ssl.truststore.location=/var/ssl/private/kafka1.kafka_network.truststore.jks
zookeeper.ssl.truststore.password=serverpassword
zookeeper.sasl.client=true
zookeeper.sasl.client.username=client
zookeeper.set.acl=true